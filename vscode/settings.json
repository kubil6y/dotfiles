{
    "editor.renderLineHighlight": "none",
    "editor.codeLens": false,
    "editor.lightbulb.enabled": "off",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.hideCursorInOverviewRuler": true,
    "editor.scrollbar.vertical": "hidden",
    "editor.guides.indentation": false,
    "editor.renderWhitespace": "none",
    "editor.matchBrackets": "near",
    "editor.cursorStyle": "block",
    "explorer.compactFolders": false,
    "emmet.showExpandedAbbreviation": "inMarkupAndStylesheetFilesOnly",
    "files.restoreUndoStack": false,
    "files.associations": {
        "*.html": "html",
    },
    "files.exclude": {
        ".godot/": true,
        "**/*.meta": true,
        "**/*.o": true,
        "**/obj": true,
    },
    "search.exclude": {
        "**/*.anim": true,
    },
    "go.toolsManagement.autoUpdate": true,
    // "omnisharp.enableImportCompletion": true,
    "omnisharp.useEditorFormattingSettings": false,
    // .net:true, unity:false
    "omnisharp.useModernNet": false,
    "omnisharp.monoPath": "/usr/bin/mono",
    "omnisharp.enableAsyncCompletion": true,
    "security.workspace.trust.enabled": false,
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "workbench.layoutControl.enabled": false,
    "workbench.sideBar.location": "left",
    "workbench.tree.indent": 12,
    "workbench.editor.restoreViewState": false,
    "workbench.startupEditor": "none",
    "editor.semanticHighlighting.enabled": false,
    "editor.semanticTokenColorCustomizations": {
        // "[Vesper]": {
        //     "enabled": true,
        //     "rules": {
        //         // "event": "#e0e0e0",
        //         // "variable": "#e0e0e0",
        //         // "property": "#e0e0e0",
        //         // "parameter": "#e0e0e0",
        //         // "type": "#e0e0e0",
        //         // "enumMember": "#e0e0e0",
        //         // "punctuation": "#a0a0a0",
        //     },
        // },
    },
    "editor.tokenColorCustomizations": {
        "[Vesper]": {
            "textMateRules": [
                {
                    "scope": [
                        "entity.name.variable",
                        // Under these are used for e0e0e0
                        // "text.html.markdown",
                        // "meta.paragraph.markdown",
                        // "markup.list.unnumbered.markdown",
                        // "support.type.property-name.json.comments",
                    ],
                    "settings": {
                        "foreground": "#ffffff",
                    },
                },
                {
                    "scope": ["punctuation"],
                    "settings": {
                        "foreground": "#a0a0a0",
                    },
                },
                {
                    "scope": ["keyword.type"],
                    "settings": {
                        "foreground": "#FFC799",
                    },
                },
                {
                    "scope": [
                        "constant.language.null",
                        "constant.language.undefined",
                    ],
                    "settings": {
                        "foreground": "#FFC799",
                        "fontStyle": "bold",
                    },
                },
            ],
        },
        "[Rosé Pine Moon (no italics)]": {
            "textMateRules": [
                {
                    "scope": ["entity.name.variable"],
                    "settings": {
                        "foreground": "#E0DEF4",
                    },
                },
            ],
        },
    },
    "workbench.colorCustomizations": {
        "[Vesper]": {
            "tab.activeBorderTop": "#FFC799",
            "editorSuggestWidget.foreground": "#cccccc",
            "quickInput.foreground": "#cccccc",
            "editorSuggestWidget.selectedBackground": "#ffffff25",
            "editorLineNumber.activeForeground": "#505050",
            "list.inactiveSelectionBackground": "#282828",
            "quickInputList.focusBackground": "#393939",
            "editorBracketMatch.border": "#101010",
            "editorBracketMatch.background": "#101010",

            // CTRL+P
            "widget.border": "#333333",
            "widget.shadow": "#0000005c",
            "sideBar.border": "#80808059", // File tree

            // "editorCursor.foreground": "#ffdd33",
            "editorCursor.foreground": "#ffffff",
            "editorCursor.background": "#505050",
            // "terminalCursor.foreground": "#FFC799",
        },
        "[Rosé Pine Moon (no italics)]": {
            // 13121c, 191724
            "editor.background": "#191724",
            "sideBar.background": "#191724",
            "editorGutter.background": "#191724",
            "statusBar.background": "#191724",
            "welcomePage.background": "#191724",
            "activityBar.background": "#191724",
            "titleBar.activeBackground": "#191724",
            "titleBar.inactiveBackground": "#191724",

            "editorStickyScroll.background": "#26233a",
            "sideBar.border": "#393552",
            "editorGroup.border": "#393552",

            // popup backgrounds
            "editorSuggestWidget.background": "#1f1d2e",
            "editorSuggestWidget.selectedBackground": "#6e6a8633",
            "quickInput.background": "#1f1d2e",
            "quickInputList.focusBackground": "#6e6a8633",
            "editorActionList.background": "#1f1d2e",
            "editorActionList.focusBackground": "#6e6a8633",
            "terminal.background": "#26233a",
            "panel.background": "#26233a",

            // tab theming (compact size)
            // "editorGroupHeader.tabsBackground": "#232033",
            "tab.activeBackground": "#191724",
            "tab.activeForeground": "#E0DEF4",
            "tab.inactiveForeground": "#6E6A86",
            "tab.activeBorderTop": "#6E6A86",

            // cursor
            "editorCursor.background": "#6e6a86",
            "editorCursor.foreground": "#e6edf3",
            "terminalCursor.background": "#6e6a86",
            "terminalCursor.foreground": "#e6edf3",

            // autocomplete stuff
            "list.highlightForeground": "#e0def4",
            "list.focusHighlightForeground": "#e0def4",
            "editorSuggestWidget.focusHighlightForeground": "#e0def4",
            "editorSuggestWidget.highlightForeground": "#e0def4",

            "editorLineNumber.activeForeground": "#5c5877",
            "editorLineNumber.foreground": "#5c5877",

            "editor.selectionBackground": "#3b3551",
        },
        "[Default Dark Modern]": {
            // "editorStickyScroll.background": "#303030",
            "editorLineNumber.activeForeground": "#4a4f56",
            "editorLineNumber.foreground": "#4a4f56",
        },
    },
    "vim.leader": " ",
    "vim.statusBarColorControl": false,
    "vim.hlsearch": true,
    "vim.cursorStylePerMode.visualblock": "block",
    "vim.cursorStylePerMode.insert": "block",
    "vim.cursorStylePerMode.normal": "block",
    "vim.cursorStylePerMode.replace": "block",
    "vim.cursorStylePerMode.visual": "block",
    "vim.cursorStylePerMode.visualline": "block",
    "vim.handleKeys": {
        "<Esc>": false,
    },
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["]", "d"],
            "commands": ["editor.action.marker.nextInFiles"],
            "silent": true,
        },
        {
            "before": ["[", "d"],
            "commands": ["editor.action.marker.prevInFiles"],
            "silent": true,
        },
        {
            "before": ["<leader>", "f"],
            "commands": ["editor.action.formatDocument"],
            "silent": true,
        },
        {
            "before": ["<leader>", "d", "s"],
            "commands": [":nohl"],
            "silent": true,
        },
        {
            "before": ["<leader>", "d", "a"],
            "commands": ["workbench.debug.viewlet.action.removeAllBreakpoints"],
            "silent": true,
        },
        {
            "before": ["<leader>", "t", "a"],
            "commands": ["workbench.action.toggleActivityBarVisibility"],
            "silent": true,
        },
        {
            "before": ["<leader>", "s", "l"],
            "commands": ["workbench.view.extension.sln_explorer"],
            "silent": true,
        },
        {
            "before": ["<leader>", "t", "l"],
            "commands": ["workbench.view.extension.todo-tree-container"],
            "silent": true,
        },
        {
            "before": ["<leader>", "t", "m"],
            "commands": ["editor.action.toggleMinimap"],
            "silent": true,
        },
        {
            "before": ["%"],
            "commands": ["extension.matchitJumpItems"],
            "silent": true,
        },
        {
            "before": ["<leader>", "d", "t"],
            "commands": ["editor.action.revealDeclaration"],
            "silent": true,
        },
        {
            "before": ["<C-d>"],
            "after": ["<C-d>", "z", "z"],
        },
        {
            "before": ["<C-u>"],
            "after": ["<C-u>", "z", "z"],
        },
        {
            "before": ["<leader>", "c", "a"],
            "commands": ["workbench.action.closeEditorsInGroup"],
            "silent": true,
        },
        {
            "before": ["<leader>", "c", "e"],
            "commands": ["workbench.action.closeOtherEditors"],
            "silent": true,
        },
        {
            "before": ["<C-p>"],
            "commands": ["workbench.action.quickOpen"],
            "silent": true,
        },
        {
            "before": ["<leader>", "d", "n"],
            "commands": ["notifications.clearAll"],
            "silent": true,
        },
    ],
    "vim.commandLineModeKeyBindings": [
        {
            "before": ["W"],
            "after": ["w"],
        },
        {
            "before": ["Q"],
            "after": ["q"],
        },
    ],
    // "[csharp]": {
    //     "editor.defaultFormatter": "ms-dotnettools.csharp"
    //     // "editor.defaultFormatter": "csharpier.csharpier-vscode"
    // },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "scm.diffDecorations": "none",
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "editor.renderFinalNewline": "off",
    "keyboard.dispatch": "keyCode",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "breadcrumbs.enabled": false,
    "editor.bracketPairColorization.enabled": false,
    "csharpextensions.useThisForCtorAssignments": false,
    "html.autoCreateQuotes": false,
    "csharpextensions.useFileScopedNamespace": true,
    "editor.inlineSuggest.enabled": false,
    "vssolution.netcoreIgnore": ["node_modules", "obj", ".ds_store", ".vs"],
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "prettier.tabWidth": 4,
    "prettier.useTabs": false,
    "scm.diffDecorationsGutterPattern": {
        "added": true,
    },
    "editor.lineNumbers": "relative",
    "window.customMenuBarAltFocus": false,
    "window.enableMenuBarMnemonics": false,
    "window.menuBarVisibility": "hidden",
    "settings.cycle": [
        {
            "id": "toggleMenuBar",
            "values": [
                { "window.menuBarVisibility": "hidden" },
                { "window.menuBarVisibility": "visible" },
            ],
        },
    ],
    "errorLens.scrollbarHackEnabled": true,
    "terminal.integrated.inheritEnv": true,
    // "gdscript_formatter.line_size": 80,
    // "godot_tools.gdscript_lsp_server_port": 6005,
    "errorLens.onSave": true,
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "workbench.iconTheme": "material-icon-theme",
    "editor.occurrencesHighlight": "off",
    "extensions.ignoreRecommendations": true,
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.stickyScroll.enabled": false,
    "editor.stickyScroll.maxLineCount": 1,
    "todo-tree.general.tags": ["BUG", "HACK", "FIXME", "TODO", "XXX"],
    "window.zoomLevel": 1,

    "editor.fontFamily": "MonoLisa",
    "editor.fontLigatures": "'zero', 'ss03' on,'ss07' on, 'ss13' on, 'ss14' on, 'ss17' on,'ss18' on",
    "editor.fontSize": 16,
    "editor.suggestFontSize": 16,
    "terminal.integrated.fontSize": 16,
    "editor.fontVariations": false,
    // "editor.fontWeight": "450",

    // "editor.fontFamily": "Berkeley Mono Variable",
    // "editor.fontSize": 16,
    // "editor.suggestFontSize": 16,
    // "terminal.integrated.fontSize": 16,

    "editor.wordWrap": "on",
    "editor.suggestSelection": "first",
    "dotnet.formatting.organizeImportsOnFormat": true,
    // tab sizing
    "window.density.editorTabHeight": "compact",
    "workbench.editor.showIcons": false,
    "workbench.editor.enablePreview": false,
    "window.titleBarStyle": "custom",
    "chat.commandCenter.enabled": false,
    "window.commandCenter": false,
    "editor.minimap.enabled": false,
    "workbench.activityBar.location": "hidden",
    "workbench.colorTheme": "Vesper",
    // tab sizing
}
